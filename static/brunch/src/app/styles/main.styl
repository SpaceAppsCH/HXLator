a, a:visited
  color #336699
  font-weight bold
  text-decoration none

a:hover
  color #336699
  font-weight bold


/* Default font settings */
body
  font-size 14px
  color #666
  background #fff
  font-family "KievitPro", "ff-kievit-web-pro-1","ff-kievit-web-pro-2", "Helvetica Neue", Arial, Helvetica, sans-serif

/* Headings */
h1,h2,h3,h3,h4
  font-weight normal
  color #222
  clear left

h1
  font-size 3em
  line-height 1.4
  margin-bottom 0.5em
h2
  font-size 2em
  line-height 1
  margin-bottom 0.5em

/* Text elements */
p
  margin 0 0 1.5em

a:focus, a:hover
  color #336699
  font-weight bold
  text-decoration underline
a
  color #336699
  font-weight bold
  text-decoration none

/* Lists */
